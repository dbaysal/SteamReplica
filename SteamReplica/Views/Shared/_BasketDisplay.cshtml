@model List<NLayer.Core.ResponseDTOs.GameDisplayResponse>

<section style="background-color: #2a475e;">
	<div class="container py-5">


		@foreach (var game in Model)
		{
			<div class="row justify-content-center mb-3">
				<div class="col-md-12 col-xl-10">
					<div class="card shadow-0 border rounded-3">
						<div class="card-body" style="background-color: #c7d5e0;">
							<div class="row">
								<div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
									<div class="bg-image hover-zoom ripple rounded ripple-surface">
										<img src="@game.ImageURL"
										     class="w-100" />
										<a href="#!">
											<div class="hover-overlay">
												<div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
											</div>
										</a>
									</div>
								</div>
								<div class="col-md-6 col-lg-6 col-xl-6">
									<h5>@game.Title</h5>
								
									<div class="mt-1 mb-0 text-muted small">
										<span>@game.GenreName</span>
									</div>
								
									<p class="text mb-4 mb-md-0">
										@game.Description
									</p>
								</div>
								<div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
									
									<div class="d-flex flex-column mt-4">

										<a asp-controller="Basket" asp-action="RemoveFromCart" asp-route-gameId="@game.Id" class="btn btn-danger">Remove From Cart</a>

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			

		  
		
		
		}

	</div>
	@if (ViewBag.isCartEmpty)
	{
		<h1 style="color:aliceblue; text-align: center;">Shopping Cart Is Empty</h1>
	}
	else
	{
		<div style="margin-left: 1100px;">
			<a asp-controller="Basket" asp-action="BuyAll"  class="btn btn-success">Buy All</a>

		</div>
	}
	
</section>
